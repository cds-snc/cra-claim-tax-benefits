extends ../base
include ../_includes/offramp-banner

block variables
  -var title = __('You have filed your 2018 taxes')

block content

  h1 #{title}

  div
    table.pure-table
      thead
        tr
          th #{__('Your 2018 filing code is')}
      tbody
        tr
          td 5H3P9IO5816

    p #{__('Use this code if you need to call about your taxes or ask for help from CRA by:')}  
    include ../_includes/phone-bullets

    p #{__('You may also be able to get help at a free tax clinic. ')}<a href=#{__('https://www.canada.ca/en/revenue-agency/campaigns/free-tax-help.html?utm_campaign=not-applicable&utm_medium=vanity-url&utm_source=canada-ca_taxes-help')}>#{__('Learn')}</a> #{__(' if you can use a tax clinic.')}

  div

    p #{__('You can get an “express” notice of assessment right after CRA gets your taxes online. It shows:')}
    ul
      li #{__('That you filed taxes')}
      li #{__('If you will get benefits or money back')}
      li #{__('If you owe money to CRA')}

    a(href='/offramp/confirmation' role='button' draggable='false') #{__('Download your 2018 express notice of assessment')}

  .offramp
    p  #{__('You can print or save the notice after you download it.')}
    p  #{__('You will get a notice of reassessment if CRA makes any changes.')}
    p  #{__('If CRA owes you money, then:')}

    ul
      li #{__('CRA will put the money in your bank account if you arranged direct deposit.')}
      li #{__('your cheque comes in the mail if you didn’t arrange direct deposit.')}

    p  #{__('Thank you for using our service.')} <a href="/feedback">#{__('Please share your feedback.')}</a>

    +offramp-banner
      p <strong>#{__('Survey Instructions:')}</strong> #{__('If you are finished, ')} <a href="/offramp/confirmation">#{__('click here')}</a>.

