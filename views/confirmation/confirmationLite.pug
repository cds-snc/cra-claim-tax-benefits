extends ../base
include ../_includes/banner

block variables
  -var title = __('You have filed your 2018 taxes')

block content

  h1 #{title}

  div
    table.confirmation-table
      thead
        tr
          th #{__('Your 2018 filing code is')}
      tbody
        tr
          td 5H3P9IO5816

    p #{__('Keep this filing code and use it if you need to call about your taxes or ask for help from CRA by:')}
    include ../_includes/phone-bullets

    p #{__('CRA sends your notice of assessment within eight weeks of getting your completed ')} <i>#{__('service.name')}</i> #{__(' form. The notice of assessment:')} 
    ul
      li #{__('outlines your income, benefits and credits')}
      li #{__('explains if CRA needed to change anything on your taxes')}

    p #{__('If CRA owes you money, then:')}
    ul 
      li #{__('CRA will put it in your bank account if you registered for direct deposit')}
      li #{__('Your cheque comes with the notice if you did not register for direct deposit')}

    p #{__('Thank you for using the ')} <i>#{__('service.name')}</i> #{__(' online service.')}

    a(href="#") #{__('Please share your feedback')}


