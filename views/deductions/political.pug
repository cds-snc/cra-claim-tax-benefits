extends ../base
include ../_includes/yesNoRadios

block variables
  -var title = __('Political contributions')
  -var politicalContributionClaim = !hasData(data, 'deductions.politicalContributionClaim') ? '': data.deductions.politicalContributionClaim ? 'Yes' : 'No'

block content

  h1 #{title}

  

  div
    p #{__('Did you make any political contributions in 2018?')}

  form.cra-form(method='post')
    +yesNoRadios('politicalContributionClaim', politicalContributionClaim, 'Deduct political contributions?', errors)

    input#redirect(name='redirect', type='hidden', value='/deductions/donations')

    +formButtons()
