extends ../base

block variables
  -var title = __('Enter your personal access code')

block content

  h1 #{title}

  div
    p #{__('Your personal access code is the the 9-character code at the bottom of your notification letter.')}

  div
    form.cra-form(method='post')
      div(class={['has-error']: errors && errors.code})
        label(for='code') #{__('Personal access code')}
        span.cra-form-message #{__('For Example:')} A5G98S4K1
        if errors
          +validationMessage(errors.code.msg, 'code')
        input.w-3-4#code(name='code', type='text', value=data.code, autocomplete='off' aria-describedby=(errors && errors.code ? 'code-error' : false))

      div
        details.
          <summary><span>#{__('Help with personal access code')}</span></summary>
          <p>#{__('Your code is on the personally-addressed letter.')}</p>

      input#redirect(name='redirect', type='hidden', value='/login/sin')

      +formButtons()
