extends ../base
include ../_includes/address

block variables
  -var title = __('Check your mailing address')
  -var confirmedAddress = hasData(data, 'personal.confirmedAddress') ? data.personal.confirmedAddress : ''

block content

  h1 #{title}

  div
    table.pure-table
      thead
        tr
          th #{__('Mailing address')}
      tbody
        tr
          td
            .address
              +address(data)

  form.cra-form(method='post')
    +radiosYesNo('confirmAddress', 'Is this your correct address?', confirmedAddress)

    input#redirect(name='redirect', type='hidden', value='/personal/maritalStatus')

    +formButtons()

